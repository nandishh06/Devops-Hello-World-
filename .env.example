# Monitoring Stack Configuration
# Copy this file to .env and update with your values

# Loki Configuration
LOKI_HTTP_PORT=3100
LOKI_GRPC_PORT=9096
LOKI_USERNAME=loki
LOKI_PASSWORD=your_loki_password_here
LOKI_DEFAULT_TENANT=default

# Promtail Configuration
PROMTAIL_HTTP_PORT=9080
PROMTAIL_GRPC_PORT=0
PROMTAIL_TARGET=promtail
DOCKER_LOG_PATH=/var/lib/docker/containers/*/*-json.log

# Grafana Configuration
GRAFANA_HTTP_PORT=3000
GRAFANA_PROTOCOL=https
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_grafana_password_here

# Prometheus Configuration
PROMETHEUS_HTTP_PORT=9090
PROMETHEUS_USERNAME=prometheus
PROMETHEUS_PASSWORD=your_prometheus_password_here

# Application Configuration
APP_HTTP_PORT=8080
APP_USERNAME=appuser
APP_PASSWORD=your_app_password_here

# TLS Configuration
CERT_DIR=monitoring/tls
DOMAIN=localhost

# OAuth2 Configuration (Optional)
OAUTH2_CLIENT_ID=your_oauth2_client_id
OAUTH2_CLIENT_SECRET=your_oauth2_client_secret
OAUTH2_TOKEN_URL=https://your-oauth2-provider.com/oauth/token

# JWT Configuration (Optional)
JWT_SECRET=your_jwt_secret_here_at_least_32_characters
JWT_ISSUER=devops-monitoring

# Remote Storage Configuration (Optional)
REMOTE_WRITE_USERNAME=your_remote_username
REMOTE_WRITE_PASSWORD=your_remote_password

# Nomad Configuration
NOMAD_HTTP_PORT=4646
NOMAD_GRPC_PORT=4647

# Docker Configuration
DOCKER_LOG_LEVEL=info
DOCKER_HOST=unix:///var/run/docker.sock
